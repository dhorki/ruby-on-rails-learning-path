<%= error_messages_for(f.object) %>
<table>
  <tr>
    <% if mode == :edit %>
      <th>#</th>
      <td><%= @abilities_pokemon.id %></td>
    <% end %>
  </tr>
  <tr>
    <th>Pokemon</th>
    <td><%= f.select(:pokemon_id, Pokemon.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Ability</th>
    <td><%= f.select(:ability_id, Ability.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Is Hidden?</th>
    <td><%= f.check_box(:is_hidden) %></td>
  </tr>
  <tr>
    <th>Slot</th>
    <td><%= f.number_field(:slot) %></td>
  </tr>
  <% if mode == :edit %>
    <tr>
      <th>created at</th>
      <td><%= @abilities_pokemon.created_at %></td>
    </tr>
    <tr>
      <th>updated at</th>
      <td><%= @abilities_pokemon.updated_at %></td>
    </tr>
  <% end %>
</table>
