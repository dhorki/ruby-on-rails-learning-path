<%= error_messages_for(f.object) %>
<table>
  <% if mode == :edit %>
    <tr>
      <th>#</th>
      <td><%= @sprite.id %></td>
    </tr>
  <% end %>
  <tr>
    <th>Pokemon</th>
    <td><%= f.select(:pokemon_id, Pokemon.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Back Default</th>
    <td><%= f.text_field(:back_default) %>
  </tr>
  <tr>
    <th>Back Female</th>
    <td><%= f.text_field(:back_female) %>
  </tr>
  <tr>
    <th>Back Shiny</th>
    <td><%= f.text_field(:back_shiny) %>
  </tr>
  <tr>
    <th>Back Shiny Female</th>
    <td><%= f.text_field(:back_shiny_female) %>
  </tr>
  <tr>
    <th>Front Default</th>
    <td><%= f.text_field(:front_default) %>
  </tr>
  <tr>
    <th>Front Female</th>
    <td><%= f.text_field(:front_female) %>
  </tr>
  <tr>
    <th>Front Shiny</th>
    <td><%= f.text_field(:front_shiny) %>
  </tr>
  <tr>
    <th>Front Shiny Female</th>
    <td><%= f.text_field(:front_shiny_female) %>
  </tr>
  <tr>
    <th>Official Artwork Front Default</th>
    <td><%= f.text_field(:official_artwork_front_default) %>
  </tr>
  <% if mode == :edit %>
    <tr>
      <th>created at</th>
      <td><%= @sprite.created_at %></td>
    </tr>
    <tr>
      <th>updated at</th>
      <td><%= @sprite.updated_at %></td>
    </tr>
  <% end %>
</table>
