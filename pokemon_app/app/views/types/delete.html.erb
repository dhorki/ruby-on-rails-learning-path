<% @page_title = "Delete Type" %>

<%= link_to("<< Back to List", types_path(:page => params[:page])) %>

<div>
  <h2>Remove Pokemon Type</h2>

  <%= form_for(@type, :method => 'delete', :url => type_path(@type, :page => params[:page])) do |f| %>

    <p>Are you sure you want to permanently remove this Type?</p>

    <p><%= "(id #{f.object.id}) #{f.object.name}"  %></p>

    <div>
      <%= f.submit("Delete Type") %>
    </div>

  <% end %>
</div>