<% @page_title = "Add Pokemon Type" %>

<%= link_to("<< Back to List", pokemons_types_path(:pokemon_page => params[:pokemon_page], :type_page => @type_page, :pokemon_id => params[:pokemon_id])) %>

<div>
  <h2>Add Pokemon Type</h2>

  <%= form_for(@pokemon_type, :url => pokemons_types_path(@pokemon_type, :pokemon_page => params[:pokemon_page], :type_page => @type_page, :pokemon_id => params[:pokemon_id])) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f, :mode => :new}) %>

    <div>
      <%= f.submit("Add Pokemon Type") %>
    </div>

  <% end %>
</div>