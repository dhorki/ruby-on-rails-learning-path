<%= error_messages_for(f.object) %>
<table>
  <tr>
    <% if mode == :edit %>
      <th>#</th>
      <td><%= @pokemon_type.id %></td>
    <% end %>
  </tr>
  <tr>
    <th>Pokemon</th>
    <td><%= f.select(:pokemon_id, Pokemon.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Type</th>
    <td><%= f.select(:type_id, Type.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Slot</th>
    <td><%= f.text_field(:slot) %></td>
  </tr>
  <% if mode == :edit %>
    <tr>
      <th>created at</th>
      <td><%= @pokemon_type.created_at %></td>
    </tr>
    <tr>
      <th>updated at</th>
      <td><%= @pokemon_type.updated_at %></td>
    </tr>
  <% end %>
</table>
