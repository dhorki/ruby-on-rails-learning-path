<% @page_title = "Remove Pokemon Type" %>

<%= link_to("<< Back to List", pokemons_types_path(:pokemon_page => params[:pokemon_page], :type_page => @type_page, :pokemon_id => params[:pokemon_id])) %>

<div>
  <h2>Remove Pokemon Type</h2>

  <%= form_for(@pokemon_type, :method => 'delete', :url => pokemons_type_path(@pokemon_type, :pokemon_page => params[:pokemon_page], :type_page => @type_page, :pokemon_id => params[:pokemon_id])) do |f| %>

    <p>Are you sure you want to permanently remove this Type?</p>

    <p><%= "(pokemon-type id #{f.object.id}) #{f.object.type.name}"  %></p>

    <div>
      <%= f.submit("Remove Pokemon Type") %>
    </div>

  <% end %>
</div>
