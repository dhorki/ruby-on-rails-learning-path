<% @page_title = "Edit Pokemon Type" %>

<%= link_to("<< Back to List", pokemons_types_path(:pokemon_page => params[:pokemon_page], :type_page => @type_page, :pokemon_id => params[:pokemon_id])) %>

<div>
  <h2>Edit Pokemon</h2>

  <%= form_for(@pokemon_type, :url => pokemons_type_path(@pokemon_type, :pokemon_page => params[:pokemon_page], :type_page => @type_page, :pokemon_id => params[:pokemon_id])) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f, :mode => :edit}) %>

    <div>
      <%= f.submit("Edit Pokemon Type") %>
    </div>

  <% end %>
</div>