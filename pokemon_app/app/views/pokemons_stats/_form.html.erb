<%= error_messages_for(f.object) %>
<table>
  <tr>
    <% if mode == :edit %>
      <th>#</th>
      <td><%= @pokemon_stat.id %></td>
    <% end %>
  </tr>
  <tr>
    <th>Pokemon</th>
    <td><%= f.select(:pokemon_id, Pokemon.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Stat</th>
    <td><%= f.select(:stat_id, Stat.alpha_sorted.map {|s| [ s.name, s.id ] }) %></td>
  </tr>
  <tr>
    <th>Base Stat</th>
    <td><%= f.text_field(:base_stat) %></td>
  </tr>
  <% if mode == :edit %>
    <tr>
      <th>created at</th>
      <td><%= @pokemon_stat.created_at %></td>
    </tr>
    <tr>
      <th>updated at</th>
      <td><%= @pokemon_stat.updated_at %></td>
    </tr>
  <% end %>
</table>
