<% @page_title = "Delete Pokemon" %>

<%= link_to("<< Back to List", pokemons_path(:pokemon_page => @pokemon_page)) %>

<div>
  <h2>Delete Pokemon</h2>

  <%= form_for(@pokemon, :method => 'delete', :url => pokemon_path(:pokemon_page => @pokemon_page)) do |f| %>

    <p>Are you sure you want to permanently delete this pokemon?</p>

    <p><%= "#{f.object.name} (id #{f.object.id})"  %></p>

    <div>
      <%= f.submit("Delete Pokemon") %>
    </div>

  <% end %>
</div>
